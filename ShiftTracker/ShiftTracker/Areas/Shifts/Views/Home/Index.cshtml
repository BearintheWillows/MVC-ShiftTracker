@model IEnumerable<ShiftTracker.Data.Models.Shift>

@{
    ViewData[ "Title" ] = "Index";
}

<button class="getShiftBtn">Get Shifts</button>

@if ( Model == null )
{
    <p>Loading...</p>
} else
{
    <div class="tableBorder table-primary">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Run #</th>
                <th scope="col">Start Time</th>
                <th scope="col">Finish Time</th>

            </tr>
            </thead>
            <tbody>
            @foreach ( var s in Model )
            {
                <tr>
                    <td>@s.Date.ToShortDateString()</td>
                    <td>@s.Run.Number</td>
                    <td>@s.StartTime.ToString( @"hh\:mm" )</td>
                    <td>@s.EndTime.ToString( @"hh\:mm" )</td>
                    <td class="updateDeleteButtons">
                        <a asp-page="/Edit" asp-route-id="@s.Id"><i class="fa-regular fa-pen-to-square editBtn" style="display: none"></i></a>
                        <a asp-page="/Delete" asp-route-id="@s.Id"><i class="fa-regular fa-trash-can deleteBtn" style="display: none"></i></a>
                    </td>
                </tr>

            }
            </tbody>
        </table>

    </div>
}

<script src="js/shiftService.bundle.min.js"></script>


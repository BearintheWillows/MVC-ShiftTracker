@model IEnumerable<ShiftTracker.Data.Models.Shift>


@{
    ViewData[ "Title" ] = "Index";
}

<button type="button" class="addButton">Get Shifts</button>

<form>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" placeholder="Enter Date">
    </div>
    <div class="form-group">
        <label for="shiftStart">Shift Start</label>
        <input type="time" class="form-control" id="shiftStart" placeholder="Enter Shift End">
    </div>
    <div class="form-group">
        <label for="shiftEnd">Shift Finish</label>
        <input type="time" class="form-control" id="shiftEnd" placeholder="Enter Shift Finish TIme">
    </div>
    <div class="form-group">
        <label for="driveTime">Drive Time</label>
        <input type="time" class="form-control" id="driveTime" placeholder="Enter Drive Time">
    </div>
    <div class="form-group">
        <label for="workTime">Work Time</label>
        <input type="time" class="form-control" id="workTime" placeholder="Enter Work Time">
    </div>
    <div class="form-group">
        <label for="otherWorkTime">Other Work</label>
        <input type="time" class="form-control" id="OtherWorkTime" placeholder="Enter Other Work">
    </div>
    <button type="button">Add Break</button>
    <button type="button" class="addButton">Add Shift</button>
</form>

@if ( Model == null )
{
    <p>Loading...</p>
} else
{
    <div class="tableBorder table-primary">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Run #</th>
                <th scope="col">Start Time</th>
                <th scope="col">Finish Time</th>

            </tr>
            </thead>
            <tbody>
            @foreach ( var s in Model )
            {
                <tr>
                    <td>@s.Date.ToShortDateString()</td>
                    <td>@s.Run.Number</td>
                    <td>@s.StartTime.ToString( @"hh\:mm" )</td>
                    <td>@s.EndTime.ToString( @"hh\:mm" )</td>
                    <td class="updateDeleteButtons">
                        <a asp-page="/Edit" asp-route-id="@s.Id"><i class="fa-regular fa-pen-to-square editBtn" style="display: none"></i></a>
                        <a asp-page="/Delete" asp-route-id="@s.Id"><i class="fa-regular fa-trash-can deleteBtn" style="display: none"></i></a>
                    </td>
                </tr>

            }
            </tbody>
        </table>

    </div>
}
